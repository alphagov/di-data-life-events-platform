{
  "interactiveLogin": true,
  "httpServer": "NettyWrapper",
  "tokenCallbacks": [
    {
      "issuerId": "issuer1",
      "tokenExpiry": 300,
      "requestMappings": [
        {
          "requestParam": "scope",
          "match": "len",
          "claims": {
            "sub": "len",
            "iss": "http://oauth2:8080/issuer1",
            "scope": "data_receiver/notify",
            "client_id": "len"
          }
        },
        {
          "requestParam": "scope",
          "match": "internal-inbound",
          "claims": {
            "sub": "internal-inbound",
            "iss": "http://oauth2:8080/issuer1",
            "scope": "data_receiver/notify",
            "client_id": "internal-inbound"
          }
        },
        {
          "requestParam": "scope",
          "match": "passthru",
          "claims": {
            "sub": "passthru",
            "iss": "http://oauth2:8080/issuer1",
            "scope": "data_receiver/notify",
            "client_id": "passthru"
          }
        },
        {
          "requestParam": "scope",
          "match": "dwp",
          "claims": {
            "sub": "dwp-event-receiver",
            "iss": "http://oauth2:8080/issuer1",
            "scope": "data_retriever/read events/poll",
            "client_id": "dwp-event-receiver"
          }
        },
        {
          "requestParam": "scope",
          "match": "hmrc",
          "claims": {
            "sub": "hmrc-client",
            "iss": "http://oauth2:8080/issuer1",
            "scope": "data_retriever/read events/poll",
            "client_id": "hmrc-client"
          }
        },
        {
          "requestParam": "scope",
          "match": "internal-outbound",
          "claims": {
            "sub": "internal-outbound",
            "iss": "http://oauth2:8080/issuer1",
            "scope": "data_retriever/read",
            "client_id": "internal-outbound"
          }
        }
      ]
    }
  ]
}
